<body>
<div class="container">
    <h2 style="text-align: center">List of Parking Locations</h2>
            <br>
        <div class="cards">
            <% @parkings.each do |parking| %>
                <% if @user.is_admin && parking.user_id == @user.id %>
                    <div class="card-trip">
                        <% if parking.photo.attached? %>
                            <%= cl_image_tag parking.photo.key, crop: :fill %>
                        <% else %>
                            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
                        <% end %>
                            <div class="card-trip-infos">
                                <div>
                                    <h2><%= link_to parking.name, parking_path(parking) %></h2>
                                    <p><%= parking.address %></p>
                                </div>
                                    <h2 class="card-trip-pricing">Rs.<%= parking.fees %>/hr</h2>
                            </div>
                    </div>

        <!--the admin code ends here -->

        <!--the user code starts here -->

                <% elsif  @user.is_admin == false %>
                    <div class="card-trip">
                            <% if parking.photo.attached? %>
                                <%= cl_image_tag parking.photo.key, height: 200, width: 200, crop: :fill %>
                            <% else %>
                                <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
                            <% end %>
                            <div class="card-trip-infos">
                                    <div>
                                        <h2><%= link_to parking.name, parking_path(parking) %></h2>
                                        <p><%= parking.address %></p>
                                    </div>
                                    <h2 class="card-trip-pricing">Rs.<%= parking.fees %>/hr</h2>
                            </div>
                    </div>
                <% end %>
            <% end %>
        </div>
</div>

   <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</body>

        <!--the user code ends here -->
