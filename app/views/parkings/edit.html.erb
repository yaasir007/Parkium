<!--- Admin code -->
<div class="backimg-create"></div>
  <div class="mask d-flex align-items-center h-90 gradient-custom-3 m-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Update Parking Space</h2>

              <form>
              <%= simple_form_for [@parking] do |f| %>
                <div class="form-outline mb-4">
                  <%= f.input :name, html5: true, required: true, class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :address, html5: true, required: true,  class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                <%= f.input :description, html5: true, required: true,  class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :number_of_slots, html5: true, required: true, class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :photo, as: :file, required: true, class:"form-control form-control-lg" %>
                </div>

                <div class="form-outline mb-4">
                  <%= f.input :fees, label: "Fees (Rs) / Hr", html5: true, class:"form-control form-control-lg"%>
                </div>

                <div class="d-flex justify-content-center">
                   <%= f.submit 'Update Parking Space', class:"btn btn-success btn-block btn-lg gradient-custom-4 text-body" %>
                </div>

                <p class="text-center text-muted mt-5 mb-0">
                  <%= link_to  "Back", parking_path(@parking), class:"btn btn-dark" %>
                </p>

                <% end %>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<!--- Admin code -->
