<div>
   <h1>Parking Details: </h1>

<li>Name : <%= @parking.name %></li>                       <br>
<li>Address: <%=  @parking.address %></li>                   <br>
<li>Description: <%=  @parking.description %></li>       <br>
<li>Number Of Slots: <%=  @parking.number_of_slots %></li>      <br>

<% if @parking.fees > 0  %>
   <li>Fees: <%=  @parking.fees %></li> 
<% else %>
   <li><h2>Free Parking</h2></li>
<% end %>
<br>
<%= cl_image_tag @parking.photo.key, height: 200, width: 200, crop: :fill %>

</div>

<!-- Admin code -->
<% if @user.is_admin %>
   <%= link_to  "Edit", edit_parking_path(@parking) %>
   <%= link_to  "Back", parkings_path %>
   <%= link_to "Delete", parking_destroy_path(@parking), method: :delete, data: { confirm: "Are you sure?" } %>
   <!-- User code -->
   <% else %>
   <br>
   <%= link_to  "Back", parkings_path, class: "btn btn-dark" %>
   <%= link_to  "View Reviews",  parking_reviews_path(@parking), class: "btn btn-success" %>
   <%= link_to  "Make Booking", new_parking_booking_path(@parking), class: "btn btn-info" %>
   <%= link_to  "My Booking", parking_bookings_path(@parking), class: "btn btn-secondary" %>
<% end %>
