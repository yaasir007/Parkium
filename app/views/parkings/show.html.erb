<!-- Admin code Start-->

<div class="container">
 <% if @user.is_admin %>
  <div>
    <h3 align="center"><%= @parking.name %> </h3>
      <div class="park-show">
        <% if @parking.photo.attached? %>
            <%= cl_image_tag @parking.photo.key, crop: :fill %>
        <% else %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <% end %>  <div class="park-show-infos">
        <div>
          <p> Address: <%=  @parking.address %></p>
          <p> Description: <%=  @parking.description %></p>
          <p> Number Of Slots: <%=  @parking.number_of_slots %></p>
          <p>  Rs<%=@parking.fees %></p>
        </div>
        <h2 class="park-show-pricing"><%= link_to  "Edit", edit_parking_path(@parking),class: "btn btn-success p-3" %></h2>
      </div>
    </div>
  </div>
        <div class="text-center">
            <%= link_to  "Back", parkings_path ,class: "btn btn-dark p-3"%>
            <%= link_to "Delete", parking_destroy_path(@parking), method: :delete, data: { confirm: "Are you sure?" },class: "btn btn-danger  p-3"%>
        </div>
  <!-- Admin code End -->

 <% else %>


  <!-- User code Start-->
    <br>
  <div >
    <h3 align="center"><%= @parking.name %></h3>
      <div class="park-show">
        <% if @parking.photo.attached? %>
          <%= cl_image_tag @parking.photo.key, crop: :fill %>
        <% else %>
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <% end %> <div class="park-show-infos">
          <div>
            <p> Description: <%=  @parking.description %></p>
            <p> Number Of Slots: <%=  @parking.number_of_slots %></p>
            <p><%=@parking.address %></p>
          </div>
          <div>
            <h2 class="park-show-pricing"></h2>
          </div>
          <div>
            <h2 class="park-show-pricing">Rs<%=@parking.fees%>/hr </h2>
          </div>

    </div>
  </div>

</div>
  <div class="text-center m-3">
    <%= link_to  "Back", parkings_path, class: "btn btn-dark p-3" %>
    <%= link_to  "Make Booking", new_parking_booking_path(@parking), class: "btn btn-info p-3" %>

  </div>

  <div class="container">
        <br><br><br>
    <h1>All reviews</h1>

    <% @reviews.each do |review| %>
      <!--If statement to only dislay the reviews related to this specific parking-->
        <% if review.parking == @parking %>
    <ul>
        <li>
            Feedback: <%= review.content  %> ////////////////////
            Rating: <%= review.rating  %> / 5 ////////////////////
            <!--If statement to only allow current_user to delete their review-->
            <%if review.user == current_user %>
              <%= link_to "Delete Review", parking_remove_path(@parking, review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger"%>
            <%end%>

        </li>

    </ul>
        <% end %>
    <% end %>

    <%= link_to  "Create a Review", new_parking_review_path(@parking), class: "btn btn-info p-3" %>
</div>
<% end %>
</div>

<!-- User code End-->
